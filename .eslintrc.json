{
	"extends": [
		"airbnb-typescript"
	],
	"ignorePatterns": "*.js",
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"@typescript-eslint/indent": [
			"error",
			"tab"
		],
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-indent-props": [
			2,
			"tab"
		],
		"no-tabs": "off"
	}
}